# Arquivo de configuração de ambiente
# Renomeie para .env e configure suas variáveis

# Configurações Flask
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-em-producao

# Configurações de Banco de Dados
# SQLite (padrão - desenvolvimento local)
DATABASE_URL=sqlite:///consultas_medicas.db

# PostgreSQL AWS RDS (produção/desenvolvimento)
# Substitua com os dados do seu RDS:
# DATABASE_URL=postgresql://postgres:SuaSenha123@consultas-medicas-db.xxxxxxxxx.us-east-1.rds.amazonaws.com:5432/consultas_medicas

# PostgreSQL Local (alternativa)
# DATABASE_URL=postgresql://postgres:senha@localhost:5432/consultas_medicas

# MySQL (alternativa)
# DATABASE_URL=mysql://usuario:senha@localhost:3306/consultas_medicas

# Configurações do Servidor
HOST=0.0.0.0
PORT=5000
DEBUG=True
